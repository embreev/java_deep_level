<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="authNode" alignment="CENTER" prefHeight="200.0" prefWidth="200.0"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="AuthController">
    <TextField fx:id="tfUsername" focusTraversable="false" promptText="Имя пользователя" HBox.hgrow="ALWAYS" />
    <TextField fx:id="tfPassword" focusTraversable="false" promptText="Пароль" HBox.hgrow="ALWAYS" />
    <Button onAction="#pressOnAuthBtn" text="Авторизоваться" HBox.hgrow="ALWAYS" />
</VBox>
